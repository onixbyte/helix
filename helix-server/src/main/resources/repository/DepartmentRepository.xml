<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onixbyte.helix.repository.DepartmentRepository">
    <select id="selectAll" resultType="department">
        SELECT id,
        name,
        parent_id,
        tree_path,
        sort,
        status,
        created_at,
        updated_at
        FROM departments
        <if test="pageRequest.paged">
            OFFSET #{pageRequest.offset} LIMIT #{pageRequest.pageSize}
        </if>
        <if test="pageRequest.sort != null and pageRequest.sort.sorted">
            ORDER BY
            <foreach collection="pageRequest.sort.orders" item="order">
                ${order.property} ${order.direction}
            </foreach>
        </if>
    </select>
</mapper>