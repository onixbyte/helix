<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onixbyte.helix.repository.AssetRepository">
    <insert id="save" parameterType="asset" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO assets(key, upload_by, upload_time)
        VALUES (#{asset.key}, #{asset.uploadBy}, #{asset.uploadTime})
    </insert>

    <select id="selectById" parameterType="long" resultType="asset">
        SELECT id,
               key,
               upload_by,
               upload_time
        FROM assets
        WHERE id = #{assetId}
    </select>

    <delete id="delete" parameterType="long">
        DELETE FROM assets
        WHERE id = #{assetId}
    </delete>
</mapper>